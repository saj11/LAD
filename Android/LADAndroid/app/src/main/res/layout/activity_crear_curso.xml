<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearCursoActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="DÃ­a                       Hora"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnLunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lunes"
            android:layout_marginRight="130dp"
            android:background="@android:color/holo_green_dark"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnMartes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Martes"
            android:layout_marginRight="0dp"
            android:background="@android:color/holo_green_dark"

            />
        <TextView
            android:id="@+id/CrearCursoTextViewDia1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Dia1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnMiercoles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Miercoles"
            android:layout_marginRight="35dp"
            android:background="@android:color/holo_green_dark"
            />
        <EditText
            android:id="@+id/CrearCursoPrimerHoraInicioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/CrearCursoPrimerHoraFinalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:focusable="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnJueves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jueves"
            android:layout_marginRight="0dp"
            android:background="@android:color/holo_green_dark"
            />
        <TextView
            android:id="@+id/CrearCursoTextViewDia2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Dia2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnViernes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viernes"
            android:layout_marginRight="35dp"
            android:background="@android:color/holo_green_dark"
            />
        <EditText
            android:id="@+id/CrearCursoSegundaHoraInicioText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:focusable="false"
            />
        <EditText
            android:id="@+id/CrearCursoSegundaHoraFinalText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Hora"
            android:focusable="false"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp">
        <Button
            android:id="@+id/CrearCursoBtnSabado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sabado"
            android:layout_marginRight="130dp"
            android:background="@android:color/holo_green_dark"
            />
    </LinearLayout>

    <Button
        android:id="@+id/CrearCursoBtnCrear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Grupo"
        android:layout_marginTop="30dp"/>



</LinearLayout>