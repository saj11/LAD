<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaAsistenciaGrupo"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/ListaAsisGrupoCodigoTV"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Codigo del curso"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/ListaAsisGrupoCursoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo del curso"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/ListaAsisGrupoNumeroTV"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numero de Grupo"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/ListaAsisGrupoFechaTV"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_marginTop="20dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/ListaAsisGrupoEstList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

</LinearLayout>